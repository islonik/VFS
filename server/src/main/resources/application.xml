<?xml version="1.0" encoding="UTF-8"?>
<beans
    xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:aop="http://www.springframework.org/schema/aop"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="
    http://www.springframework.org/schema/aop
	http://www.springframework.org/schema/aop/spring-aop-4.0.xsd
    http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
	http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context-4.0.xsd
	">

    <bean id="NodeAspect" class="org.vfs.server.aspects.NodeRegister" />

    <aop:config>
        <!-- Performance logging pointcut -
            run for every method in a control or facade class -->
        <!--aop:pointcut id="newNodePointcut" expression="execution(* *.newNode(..))" />

        <aop:advisor
                advice-ref="NodeAspect"
                pointcut-ref="newNodePointcut"
                id="NewNodeInterceptorAdvisor"  /-->

        <aop:advisor
                advice-ref="NodeAspect"
                pointcut="@annotation(org.vfs.server.aspects.NodeModifier)"
                id="NewNodeInterceptorAdvisor"  />
    </aop:config>

    <bean id="ExecutorService" class="java.util.concurrent.Executors" factory-method="newCachedThreadPool" />

    <context:property-placeholder location="classpath:settings.properties"/>

    <context:component-scan base-package="org.vfs.server"/>

</beans>