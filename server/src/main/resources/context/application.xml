<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="ExecutorService" class="java.util.concurrent.Executors" factory-method="newCachedThreadPool" />
    <bean id="NetworkManager"  class="org.vfs.server.network.NetworkManager">
        <constructor-arg type="java.lang.String" value="localhost"/>
        <constructor-arg type="int" value="4499"/>
        <constructor-arg type="int" value="100"/>
    </bean>
    <bean id="LockService" class="org.vfs.server.services.LockService"/>
    <bean id="NodeService" class="org.vfs.server.services.NodeService">
        <constructor-arg type="java.lang.String" value="/"/>
        <constructor-arg ref="LockService"/>
    </bean>

    <bean id="UserService" class="org.vfs.server.services.UserService">
        <constructor-arg ref="NodeService"/>
    </bean>

    <bean id="Server" class="org.vfs.server.Server">
        <constructor-arg ref="ExecutorService"/>
        <constructor-arg ref="NetworkManager"/>
        <constructor-arg ref="LockService"/>
        <constructor-arg ref="NodeService"/>
        <constructor-arg ref="UserService"/>
    </bean>

</beans>